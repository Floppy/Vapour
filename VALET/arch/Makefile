# section specific
LIB = libVALETarch.a
OBJS = $(LIB)(memory.o)
TESTOBJS =

include ../base.mk

# Targets

build: $(LIB)
	-mkdir ../lib 2> /dev/null ; \
	cp $(LIB) ../lib
	-mkdir ../include 2> /dev/null ; \
	cp valet.h valet_common.h ../include

test: build $(TESTOBJS)

clean:
	rm -rf $(LIB) *.o *~ 
	
distclean: clean
	rm -rf valet.h memory.cpp

