# Makefile for VALET/3d
# NOTE: Will eventually be generated by VMake

# 02/01/2001 - Warren Moore
# $Id: Makefile,v 1.3 2001/10/15 16:16:09 vap-james Exp $
# Copyright 2001 Vapour Technology Ltd.

CC = g++
CFLAGS = -g -O -Wall
AR = ar
ARFLAGS = r
RANLIB = ranlib

LIB = libVALET3d.a
OBJS = $(LIB)(material.o materialcolour.o trimesh.o mesh.o)

.PHONY: all build

# Targets

all: build test

build: $(LIB)

$(LIB): $(OBJS)
	$(RANLIB) $(LIB)

test: build 

clean:
	rm -rf $(LIB) *.o *~

distclean: clean

# Production rules

.cpp.o:
	$(CC) $(CFLAGS) -c $<

.cpp.a:
	$(CC) $(CFLAGS) -c $<
	$(AR) $(ARFLAGS) $@ $%

# Default

.DEFAULT:
	@echo Unknown target $@


