# section specific
LIB = libVALET3d.a
OBJS = $(LIB)(material.o materialcolour.o trimodel.o mesh.o)
TESTOBJS = 

include ../base.mk

# Targets

build: $(LIB)
	-mkdir ../lib 2> /dev/null ; \
	cp $(LIB) ../lib
	-mkdir ../include 2> /dev/null ; \
	cp materialcolour.h material.h mesh.h surface.h trimodel.h ../include

test: build $(TESTOBJS)

clean:
	rm -rf $(LIB) *.o *~
	
distclean: clean

