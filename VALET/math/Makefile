LIB = libVALETmath.a
OBJS = $(LIB)(vector3d.o quaternion.o axisrotation.o eulerrotation.o homtransform.o scalar.o vector2d.o eulertype.o)
INC_HEADERS = axisrotation.h eulerrotation.h homtransform.h quaternion.h scalar.h vector3d.h vector2d.h eulertype.h
