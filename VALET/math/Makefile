VMAKE_FILES =
TEST_OBJS = eulertype.test.o
TEST_LIBS = -lVALETmath -lVALETcore -lVALETarch
TEST_APP = eulertype.test

include ../base.mk

# Targets

test: build $(TEST_OBJS)
	$(CXX) $(CFLAGS) $(CXXFLAGS) $(LDFLAGS) $(TEST_OBJS) -o $(TEST_APP) $(TEST_LIBS) && \
	chmod 755 $(TEST_APP) && \
	./$(TEST_APP)
