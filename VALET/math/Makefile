# section specific
LIB = libVALETmath.a
OBJS = $(LIB)(vector3d.o quaternion.o axisrotation.o eulerrotation.o homtransform.o scalar.o)
TESTOBJS = 

include ../base.mk

# Targets

build: $(LIB)
	-mkdir ../lib 2> /dev/null ; \
	cp $(LIB) ../lib
	-mkdir ../include 2> /dev/null ; \
	cp axisrotation.h eulerrotation.h homtransform.h quaternion.h scalar.h vector3d.h ../include

test: build $(TESTOBJS)

clean:
	rm -rf $(LIB) *.o *~ 
	
distclean: clean
	rm -rf 

